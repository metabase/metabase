{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "src/index.mts"]
}
