network-timeout=600000

auto-install-peers=true

# Hoist only these transitive dependencies so patch-package can find them
public-hoist-pattern[]=@loki/browser
public-hoist-pattern[]=prosemirror-dropcursor

# Yarn v1 was lenient about peer deps; enabling this would break the build
# Consider enabling later after auditing and fixing peer dependency issues
strict-peer-dependencies=false

ignore-workspace-root-check=true
