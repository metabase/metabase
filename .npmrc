# Increase timeout (from .yarnrc)
network-timeout=600000

# Important: Configure hoisting for compatibility with shadow-cljs and build tools
shamefully-hoist=true

# Ensure node-linker compatibility for shadow-cljs
node-linker=hoisted

# Auto-install peers
auto-install-peers=true

# Strict peer dependencies - MUST be disabled for initial migration
# Yarn v1 was lenient about peer deps; enabling this would likely break the build
# Consider enabling later after auditing and fixing peer dependency issues
strict-peer-dependencies=false
